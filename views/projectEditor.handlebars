<div class="row px-3 pt-3 justify-content-center">
  <a href="/dashboard" class="link-light px-3">&larr; Back</a>
</div>
<div class="container py-3">
  
  <div class="row p-2 justify-content-between align-items-center text-white bg-dark-glass rounded">
    <div class="row">
      <form id="edit-form">
          <h2 class="fw-bold py-2">{{#if project}}Edit Project{{else}}New Project{{/if}}</h2>
          <p class="fw-bold">Project Name:</p>
          <input
            type="text"
            class="form-control mb-4"
            id="title"
            placeholder="please enter a project name"
            {{#if project}}
            value="{{project.title}}"
            {{/if}}
          />
          <p class="fw-bold">Description:</p>
          <textarea 
            class="form-control mb-4"
            id="description"
            placeholder="please enter a description"
            style="min-height:150px;"
          >{{#if project}}{{project.description}}{{/if}}</textarea>
        <a id="submit" class="btn btn-secondary mb-3">{{#if project}}Update Project{{else}}Create New Project{{/if}}</a>
      </form>
    </div>
  </div>
</div>